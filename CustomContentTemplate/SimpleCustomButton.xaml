<Window x:Class="CustomContentTemplate.SimpleCustomButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomContentTemplate"
        mc:Ignorable="d"
        Title="SimpleCustomButton" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Button Margin="20" Padding="5" Template="{StaticResource ButtonTemplate}" Content="A Simple Button With a Custom Template "></Button>
            <Button Margin="20" Padding="5" Content="Another Button With a Custom Template "></Button>
            <Button Margin="20" Padding="5" Content="A Third Button"></Button>
            <Button Margin="20" Padding="5" >
                <Image Width="30" Source="HTML5_METER.png"></Image>
            </Button>
        </StackPanel>
    </Grid>
</Window>
