<Window x:Class="StyleDemo.BehaviorDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StyleDemo"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        mc:Ignorable="d"
        Title="BehaviorDemo" Height="300" Width="300">
    <Grid>
        <Canvas>
            <Ellipse Canvas.Left="10" Canvas.Top="10" Fill="Blue" Width="80" Height="60">
                <i:Interaction.Behaviors>
                    <local:DragInCanvasBehavior></local:DragInCanvasBehavior>
                </i:Interaction.Behaviors>
            </Ellipse>
        </Canvas>
    </Grid>
</Window>
