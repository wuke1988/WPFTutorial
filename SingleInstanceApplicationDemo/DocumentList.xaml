<Window x:Class="SingleInstanceApplicationDemo.DocumentList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SingleInstanceApplicationDemo"
        mc:Ignorable="d"
        Title="DocumentList" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBlock Name="textblock" Height="100"></TextBlock>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Open Document1" Margin="10"></Button>
                <Button Content="Open Document2" Margin="10"></Button>
                <Button Content="Open Document3" Margin="10"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
